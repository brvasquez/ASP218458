@model IEnumerable<ASP218458.Models.producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Precio unitario
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Cantidad

        </th>
        <th>
            Proveedor nombre
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.percio_unitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proveedor.nombre)
            </td>
            <td>
                <a class="btn btn-" href="/proveedors/Edit/@item.id">Edit <span class="glyphicon glyphicon-edit"></span></a>
                <a class="btn btn-" href="/proveedors/Details/@item.id">Details <span class="glyphicon glyphicon-eye-open"></span></a>
                <a class="btn btn-" href="/proveedors/Delete/@item.id">Delete <span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}